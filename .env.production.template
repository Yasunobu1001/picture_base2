# 本番環境用環境変数テンプレート
# このファイルをコピーして .env.production として使用してください

# Django 基本設定
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# データベース設定（PostgreSQL）
DATABASE_NAME=photo_sharing_db
DATABASE_USER=photo_sharing_user
DATABASE_PASSWORD=your-database-password-here
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Redis設定（キャッシュ・セッション用）
REDIS_URL=redis://127.0.0.1:6379/1

# メール設定
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=admin@yourdomain.com

# 管理者設定
ADMIN_EMAIL=admin@yourdomain.com

# ログ設定
LOG_FILE=/var/log/django/photo_sharing.log
ERROR_LOG_FILE=/var/log/django/photo_sharing_error.log

# メディアファイル設定
MEDIA_ROOT=/var/www/photo_sharing/media

# SSL/セキュリティ設定
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000

# 外部サービス設定（オプション）
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
# AWS_S3_REGION_NAME=ap-northeast-1

# Sentry設定（エラー監視、オプション）
# SENTRY_DSN=https://your-sentry-dsn-here

# 監視・メトリクス設定（オプション）
# MONITORING_ENABLED=True
# METRICS_ENDPOINT=http://localhost:9090